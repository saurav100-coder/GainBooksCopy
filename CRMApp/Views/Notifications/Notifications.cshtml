@{
    ViewData["Title"] = "All Notifications";
}


<link href="~/Content/Custom/Notification.css" rel="stylesheet" />
<script src="~/Scripts/Custom/Notification.js"></script>
<link rel="stylesheet" href="~/Content/Custom/PageLoader.css" />

<style>
    .loader, .loader:after {
        border-radius:  50%;
        width: 40px !important;
        height: 40px !important;
    }

    .loader {
        font-size:  10px;
        text-indent:  -9999em;
        border-top:  3px solid rgba(0,0,0, 0.2);
        border-right:  3px solid rgba(0,0,0, 0.2);
        border-bottom:  3px solid rgba(0,0,0, 0.2);
        border-left:  3px solid #1DA3E6;
        -webkit-transform: translateZ(0);
        -ms-transform: translateZ(0);
        transform: translateZ(0);
        -webkit-animation: load8 1.1s infinite linear;
        animation: load8 1.1s infinite linear;
        position: absolute !important;
        background-color: transparent;
        top: 50%;
        left: 45%;
        margin: 0px !important;
    }

    @@-webkit-keyframes load8 {
        0% {
            -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
        }

        100% {
            -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
        }
    }

    @@keyframes load8 {
        0% {
            -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
        }

        100% {
            -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
        }
    }
</style>



<div id="notifications_container">
    <h3>Notifications</h3>
    <div id="notifications_container-body" style="color:black;display:none;"></div>
</div>

<div id="loading" style="padding:10px;background:white;">
    <div colspan="5">
     <div id="loadingmessage" Class="loader overlay col-md-offset-6"></div>
    </div>
</div>