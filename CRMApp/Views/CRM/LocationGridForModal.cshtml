@{
    ViewData["Title"] = "LocationGridForModal";
    Layout = "";
}
<script src="~/Scripts/Custom/LocationGridForModal.js"></script>
<style>
    table tr td {
        border-left: 1px solid #ddd;
        padding: 8px;
        border-bottom: 1px solid #ddd;
    }

    table {
        width: 500px;
        border-collapse: collapse;
    }

    thead {
        display: block;
        overflow: auto;
    }
    /*tbody{display: block;height: 130px;overflow: auto;}*/ /*Commented by Shweta  */
    tbody {
        display: block;
        height: 390px;
        overflow: auto;
    }
    /*Added by Shweta to increase grid's height */
</style>
<div>  
        <div Class="form-group">        
            <input type="hidden" id="TxtHomeTown" name="TxtHomeTown" />
        </div>
        <div class="form-group">
            <label for="inputEmail1" class="col-sm-4 control-label" style="padding-top:3px">HomeTown</label>
            <div class="col-sm-5">
                <input type="text" class="form-control input-sm" id="HomeTown" name="HomeTown" style="border-radius:0px; padding-left:4px; width:200px" />
            </div>
        </div>
        <div id="CustContainer" style="display:none; width:400px; background-color:white; font-family: verdana,arial,sans-serif; font-size:11px; margin-bottom:10px">
            <table id="htexample" class="table table-bordered" cellspacing="0">
                <thead>
                    <tr style="text-align:center;">
                        <th>SNo</th>
                        <th>HomeTown</th>
                        <th>District</th>
                        <th>State</th>
                        <th>Country</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>          
</div>

