
@*@Optimization.Scripts.Render("~/bundles/jquery")*@
<script src="~/Scripts/FrameWork/jquery.min.js"></script>

<style>
    .btn-primary {
        background-color: #105faf;
        border-color: #367fa9;
    }
    @@media only screen and (max-width:600px) {
        .con {
            width: 100% !important;
            margin-left: 0px !important;
        }

      
    }
</style>
<h2 class="text-center text-primary" style="color: #105faf;">Trip Reports</h2>
<p class="text-center text-success">@TempData["Message"]</p>
<br />
<div class="col-md-12 con" style="width:40%; margin-left:30%">

    <div class="panel panel-default">
        <div class="panel-body" style="padding:50px;">
            <form action='@Url.Action("GetTripReports")' method="post">
                <div Class="form-group" style="margin-bottom:30px;">
                    <Label for="inputEmail1" class="control-label" style="text-align: right; margin-bottom: 10px; margin-top: 10px; ">From Date</Label>
                    <input type="date" id="CompTasksDate" name="FromDate" placeholder="Set Date" style="width: 100%; border: none; border-bottom: 1px solid #ddd; outline: none; " />
                </div>
                <div Class="form-group" style="margin-bottom:30px;margin-top:15px;">
                    <Label for="inputEmail1" class="control-label" style="text-align: right; margin-bottom: 10px; margin-top: 10px; ">To Date</Label>
                    <input type="date" id="CompTasksDate" name="ToDate" placeholder="Set Date" style="width: 100%; border: none; border-bottom: 1px solid #ddd; outline: none; " />
                </div>
                <div Class="form-group" style="margin-bottom: 30px;">
                    <Label class=" control-label" style="text-align: right; margin-bottom: 10px; margin-top: 10px; ">Select Employees</Label>
                    @Html.List_Search("EmployeeId", "- All Employees -", "Employees", "EmpName", "Employees_Key", "Status in(2695,2696)", 0, "", new {@onChange = "", @style = "padding-left:2px; border-radius:0px; padding-right:0px; margin:0px; width:100%; height:24px; border: none; border-bottom: 1px solid #ddd; outline: none; "})
                </div>
                <div Class="form-group" style="text-align: center; margin-bottom: 0px; margin-top: 20px; ">
                    <input type="Submit" id="SendCompTasks" class="btn btn-primary" name="SendCompTasks" value="Send" style="border-radius: 25px;width: 152px; padding-left: 5px; padding-top: 5px; padding-right: 5px;margin-left: 5px;padding-bottom: 5px;margin-bottom: 0px; " />
                </div>
            </form>

        </div>
    </div>
</div>
