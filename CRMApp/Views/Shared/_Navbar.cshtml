    <style>
          .navbar-nav a {
            color: rgb(16,108,200) !important;
            text-decoration: none;
        }

        .dropdown-menu {
            background-color: #0d6efd !important;
            background-color: rgb(16,108,200) !important;
            padding-bottom: 15px !important;
            padding-top: 8px !important;
        }

        .dropdown-item:hover {
            background-color: rgb(16,108,200) !important;
           /* color: #d1d4d8 !important;
            color: #e8ebee !important;*/
            color:#baacae !important;

        }

        .dropdown-menu a {
            color: white !important;
            text-align: center;
            font-size: 14px;
            font-weight:500;
        }

        .navbar-nav li:hover > ul.dropdown-menu {
            display: block;
            position: absolute;
            right: 0;
            left: auto;
        }
      .dropdown-submenu {
         position:relative;
       }

        .dropdown-divider {
            margin: 3px 12px !important;
            color: white;
            height: 1px !important;
            opacity: 1;
            margin-top: 2px !important;
        }

        .footer {
            padding: 30px;
            background-color: #212121;
        }

        .footer-parts{
            display: flex;
            flex-direction: row;
            justify-content:space-between;
            width:90%;
            margin:20px auto;
        }

        .footer h4 {
            margin-bottom: 20px;
            color: white;
            font-size: 25px;
        }

        .footer p {
            color: #c7cbcf;
            margin:10px 0;
            cursor:pointer;
        }

        .img-holder{
            display:flex;
        }

        .links a, .careers a{
            text-decoration:none;
        }

      @@media screen and (max-width: 760px){
        .navbar-toggler {
            background-color: rgb(16,108,200) !important;
            margin-right: 8px;
