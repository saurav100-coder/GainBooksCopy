@{
    Layout = "~/Views/Shared/Navbar.cshtml";
}

<head>
    <meta name="viewport" content="width=device-width">
    <title>Contact Us</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <link rel="stylesheet" href="~/Content/Custom/ApplyForjob.css">

    <style>
        .apply-container {
            background: url(/images/main/background_img11.png);
            background-size: cover;
            padding: 50px;
        }

        .main-container {
            margin: 0px auto;
            width: 70%;
            background: whitesmoke;
            /* padding-top: 50px; */
            box-shadow: rgb(0 0 0 / 35%) 0px 5px 15px;
            padding: 30px 40px;
        }

        h3 {
            margin-bottom: 40px;
            color: rgb(16,108,200);
            text-align:center;

        }

         .input-group {
            border: 2px solid rgb(16,108,200);
            border-radius: 5px;
        }

        .input-group-icon {
            padding: 5px 10px;
            width: 40px;
            text-align: center;
        }
    </style>

</head>
<body>

    <div class="apply-container">
        <div class="row main-container">
            <div class="" style="padding:0 100px;">
                <h3>Work With Us !</h3>
                <div class="form-group" style="margin-bottom:20px;">
                    <div class="input-group">
                        <span class="input-group-icon">
                            <i class="fa fa-user" style="font-size:16px; color:rgb(16,108,200);"></i>
                        </span>
                        <input type="text" class="form-control" placeholder="Full Name" value="">
                    </div>
                </div>
                <div class="form-group" style="margin-bottom:20px;">
                    <div class="input-group">
                        <span class="input-group-icon" style="padding-top:7.5px;">
                            <i class="fa fa-phone" style="font-size:18px; color:rgb(16,108,200);"></i>
                        </span>
                        <input type="text" class="form-control" placeholder="Mobile No." value="">
                    </div>
                </div>
                <div class="form-group" style="margin-bottom:20px;">
                    <div class="input-group">
                        <span class="input-group-icon">
                           <i class="fa fa-graduation-cap" style="font-size: 18px;color:rgb(16,108,200);padding-top: 5px;"></i>
                        </span>
                        <input type="text" class="form-control" placeholder="Key Skills" value="">
                    </div>
                </div>
                <div class="form-group" style="margin-bottom:20px;">
                    <div class="input-group">
                        <span class="input-group-icon" style="padding-top:7.5px;">
                            <img src="/images/main/map.png" style="height: 24px;padding-bottom: 5px;padding-left:1px;">
                        </span>
                        <input type="text" class="form-control" placeholder="Location" value="">
                    </div>
                </div>
                <div class="form-group" style="text-align: center;">
                    <button type="button" style=" background: rgb(16,108,200);color: white; border: none; padding: 3px 35px; border-radius: 25px;">  Submit </button>
                </div>

            </div>
          
           

        </div>
    </div>

</body>