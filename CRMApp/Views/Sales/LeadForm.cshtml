                $("#AccountCode").val(c1);

            }
            if ( $("#AccountCode").val() == "null" || $("#AccountCode").val() == "undefined" || $("#AccountCode").val() == ""){
                $("#AccountCode").val(0);
            }

            $("#CRMLeadForm").submit();

        }else{
            $("#error").text("Please Enter valid Mobile number");
        }

    }
