    function setCompositeFieldValue(fieldarr) {
            if (fieldarr[0]=="text"||fieldarr[0]=="date"||fieldarr[0]=="password"||fieldarr[0]=="email"||fieldarr[0]=="number"||fieldarr[0]=="dropdown"){
