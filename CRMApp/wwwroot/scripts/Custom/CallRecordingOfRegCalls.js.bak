        MoreDetailsdiv = $(("<div  class='MoreDetails' id='" + item.callrecordings_key + "'  style='background-color:white;width: 349px;min-height: 53px;padding-left: 10px;padding-top: 8px;margin-left: 900px;'> </div>"))

