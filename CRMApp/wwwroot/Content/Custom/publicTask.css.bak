        -ms-border-radius: 6px 0 0 0;
        -o-border-radius: 6px 0 0 0;
        border-radius: 6px 0 0 0;
        */
    }

    .tabs-nav a {
        background: hsl(120, 11%, 96%);
        border-radius: 50px;
        color: #3c8dbc;
        display: inline-block;
        font-size: 13px;
        font-weight: 600;
        height: auto;
        /*line-height: 44px;*/
        padding: 4px;
        text-align: center;
        width: 130px;
        padding-left:10px;
        padding-right:10px;
        margin-right:20px !important;
    }
        .tabs-nav a:last-child {
            margin-right: 0px !important;
        }


        .tabs-nav li {
            float: left;
        }

.tabs-stage {
    height: 150px;
    overflow-y: scroll;
    overflow-x: hidden;
    padding-top: 10px;
    padding-bottom: 10px;
    border-bottom: 1px #ddd solid;
    border-top: 0;
    clear: both;
    margin-bottom: 20px;
    position: relative;
    top: 1px;
    width: auto;
}
.tabs-stage p {
    margin: 0;
    padding: 5px;
    color: #3c8dbc;
}

.line2 span {
