li {
    display: list-item;
    text-align: -webkit-match-parent;
}

.tabs-nav {
    list-style: none;
    margin: 0;
    padding: 0;
    width: 100%;
    border-bottom: 1px #ddd solid;
    padding-bottom: 15px;
}
    .tabs-nav .tab-active a {
        background: #0F5FAF;
        /*border-bottom-color: hsla(0, 0%, 0%, 0);*/
        color: white;
        cursor: pointer;
        font-weight: 500;
        /*border: 1px solid hsl(210, 6%, 79%);
        -webkit-border-radius: 6px 0 0 0;
