.notification_wrapper {
    color: #fff;
    background-color: transparent;
    background-image: none;
    padding: 15px 15px;
    float: right;
    /*cursor: pointer;*/
}


/* NOTIFICATIONS COUNTER. */
#notification_Counter {
    display: block;
    position: absolute;
    background: #E1141E;
    color: #FFF;
    text-align: center;
    font-weight: normal;
    padding: 0 .4rem;
    margin-left: 10px;
    border-radius: 0.8rem;
    -moz-border-radius: 0.8rem;
    -webkit-border-radius: 0.8rem;
    z-index: 1;
    font-size: 13px;
}

/* THE NOTIFICAIONS WINDOW. THIS REMAINS HIDDEN WHEN THE PAGE LOADS. */
#notifications {
    display: none;
    width: 300px;
    position: absolute;
    /*top: 30px;*/
    right: 5px;
    background: #FFF;
    border: solid 1px rgba(100, 100, 100, .20);
    -webkit-box-shadow: 0 3px 8px rgba(0, 0, 0, .20);
    z-index: 0;
    margin-top: 15px;
}
    /* AN ARROW LIKE STRUCTURE JUST OVER THE NOTIFICATIONS WINDOW */
    #notifications:before {
        content: '';
        display: block;
        width: 0;
        height: 0;
        color: transparent;
        border: 10px solid #CCC;
        border-color: transparent transparent #FFF;
        margin-top: -20px;
        margin-left: 270px;
    }

    #notifications h3 {
        display: block;
        color: #333;
        background: #FFF;
        font-weight: bold;
        font-size: 14px;
        padding: 8px;
        margin: 0;
        /*border-bottom: solid 1px rgba(100, 100, 100, .30);*/
    }




.seeAll {
    background: #F6F7F8;
    padding: 8px;
    font-size: 12px;
    font-weight: bold;
    border-top: solid 1px rgba(100, 100, 100, .30);
    text-align: center;
}

    .seeAll a {
        color: #3b5998;
    }

        .seeAll a:hover {
            background: #F6F7F8;
            color: #3b5998;
            text-decoration: underline;
        }


#notification_Button {
cursor:pointer;
}

.notification_card {
    border-top: 1px solid #cfcfcf;
    padding: 8px;
}

    .notification_card .row {
        margin-right: 0;
    }

.unseen-notification {
    background-color: #e6f7ff;
}
